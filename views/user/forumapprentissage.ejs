<%- include('tete'); -%>
<style>
   .user-profile-image {
    width: 100px;
    height: 100px;
    margin-bottom: 10px;
}
.rounded-circle {
    border-radius: 50% !important;
}
</style>
<!-- en tete-->
<%- include('header'); -%>
<!-- Slider area -->
<div class="container">
    <div style="background-color: #fff;" class="row  hidden-md hidden-lg">
         <div class="col-lg-12 col-sm-12">
           <div class="dropdown  pull-right"> 
              <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" href="#"><img src="/assets/semantic/images/profile.jpg" style="height: 50px;" class="img-circle" alt="" /><b class="caret"></b></a>
              <ul style="top: 50px;" class="dropdown-menu">
                <div style="background: #fff; padding: 25px;" class="col-md-4 col-lg-3 ">
                         <div class="card card-white">
                             <div class="text-center card-body user-profile-card">
                                 <p class="text-center m-t-lg">Nom au complet</p>
                                 <h4 class="text-center"><%= nom %></h4>
                                 <hr>
                                 <ul class="list-unstyled text-center">
                                    <li>
                                        <p><i class="text-center"></i>Matricule</p>
                                    </li>
                                    <li>
                                        <h4><%= matricule %></h4>
                                    </li>
                                    <li>
                                        <p><i class="text-center"></i>Classe</p>
                                    </li>
                                    <li>
                                        <h4><%= classe %></h4>
                                    </li>
                                 </ul>
                                 <hr>
                                <a href="/forum/modifier"><button style=" background: #F6B60B; border-color: #fff;" class="btn btn-info btn-block">Modifier profil</button></a> 
                                 <hr>
                                 <a href="/forum/deconnection"><button style="background-color: #f8b81d; border: none;" class="btn btn-info btn-block">Deconnecter</button></a></div>
                         </div>
                     </div>
              </ul>
             </div>
         </div>
     </div>   
 </div>
  <section class="banner_area" data-stellar-background-ratio="0.5">
     <h2>Forum </h2>
     <ol class="breadcrumb">
         <li><a href="#" class="active">Ici c'est le forum d'apprentissage</a></li>
     </ol>
 </section>
    <div class="container">  
     <!-- debut du formulaire -->
     <div class="row">
              <div style="background: #fff; padding: 25px;" class="col-md-3 hidden-xs col-lg-3">
                         <div class="card card-white">
                             <div class="card-heading clearfix">
                                 <h4 class="text-center card-title">Profile d'utilisateur</h4>
                             </div>
                             <div class="text-center card-body user-profile-card">
                                <img src="/assets/semantic/images/profile.jpg" class="user-profile-image rounded-circle" alt="" />
                                 <p class="text-center m-t-lg">Nom au complet</p>
                                 <h4 class="text-center"><%= nom %></h4>
                                 <hr>
                                 <ul class="list-unstyled text-center">
                                     <li>
                                         <p><i class="text-center"></i>Matricule</p>
                                     </li>
                                     <li>
                                         <h4><%= matricule %></h4>
                                     </li>
                                     <li>
                                         <p><i class="text-center"></i>Classe</p>
                                     </li>
                                     <li>
                                         <h4><%= classe %></h4>
                                     </li>
                                 </ul>
                                 <hr>
                                 <a href="/forum/modifier"><button style="background-color: #f8b81d; border: none;" class="btn btn-info btn-block">Modifier profil</button></a>
                                 <hr>
                            
                                 <a href="/forum/deconnection"><button style="background-color: #f8b81d; border: none;" class="btn btn-info btn-block">Deconnecter</button></a> </div>
                         </div>
                     </div>
            <div class="col-lg-offset-1 col-md-offset-1 col-sm-8 col-md-8 col-lg-8" style="padding-bottom: 20px;">
            <div class="row">  
                <% for(var i = 0; i< mesmatiere.length ; i++){ %>       
        
             <div id="cour" style="margin-top: 30px;"  class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                 <a href="/forumclasse/<%= classe %>/<%= mesmatiere[i] %>">
                  <div class="col-lg-12">
                   <img style="width: 100%;" src="/assets/semantic/images/chimie.jpg" >
                 </div>
                <div  class="col-lg-12">
                     <button style="font-size: 20px;" class="btn btn-info btn-block"><%= mesmatiere[i] %></button>
                 </div>
                 </a>
               
             </div>
             <% } %>


     </div>
     </div>
         
     </div>
 </div>

<%- include('pied'); -%>
