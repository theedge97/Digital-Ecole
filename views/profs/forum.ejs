    <script src="/assets/semantic/profs/js/moment.js"></script>
    <script src="/assets/semantic/profs/js/moment-with-locales.js"></script>
    
    <script>
      var date = document.querySelectorAll('#date')
      moment.locale('fr')
      var element = '';
      for (var  i = 0; i< date.length; i++) {
       element = date[i].textContent;
      var datation = moment(element).fromNow();
      date[i].innerHTML = datation;
          }
    </script>
